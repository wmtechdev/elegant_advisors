rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
    }
    
    // Admin Users Collection - All admins have same permissions
    match /admin_users/{userId} {
      // Admins can read any admin record
      allow read: if isAdmin();
      
      // All admins can create/update/delete admin users
      allow create, update, delete: if isAdmin();
    }
    
    // Properties Collection
    match /properties/{propertyId} {
      // Public read access for published properties
      allow read: if resource.data.isPublished == true;
      
      // Admin-only write access
      allow create, update, delete: if isAdmin();
    }
    
    // Team Collection
    match /team/{teamId} {
      // Public read access for published team members
      allow read: if resource.data.isPublished == true;
      
      // Admin-only write access
      allow create, update, delete: if isAdmin();
    }
    
    // Site Content Collection
    match /site_content/{pageId} {
      // Public read access
      allow read: if true;
      
      // Admin-only write access
      allow create, update, delete: if isAdmin();
    }
    
    // Contact Submissions Collection
    match /contact_submissions/{submissionId} {
      // Anyone can create contact submissions
      allow create: if true;
      
      // Only admins can read, update, or delete submissions
      allow read, update, delete: if isAdmin();
    }
    
    // Analytics Collection - Admin only
    match /analytics_daily/{date} {
      // Public can increment visitor count (for tracking)
      allow create, update: if true;
      
      // Only admins can read analytics
      allow read: if isAdmin();
    }
    
    // Visitors Collection - Admin only
    match /visitors/{visitorId} {
      // Public can create visitor records (for tracking)
      allow create: if true;
      
      // Only admins can read visitor data
      allow read: if isAdmin();
    }
    
    // Visit Tracking Collection - Admin only
    match /visit_tracking/{propertyId} {
      // Public can update visit tracking (for analytics)
      allow create, update: if true;
      
      // Only admins can read visit tracking data
      allow read: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
